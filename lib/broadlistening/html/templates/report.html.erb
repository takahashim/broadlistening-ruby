<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @title %></title>
  <script src="https://cdn.plot.ly/plotly-2.27.0.min.js"></script>
  <style>
    :root {
      --primary: #319795;
      --primary-dark: #2c7a7b;
      --text-color: #1a202c;
      --text-secondary: #718096;
      --bg-color: #ffffff;
      --card-bg: #f7fafc;
      --border-color: #e2e8f0;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      line-height: 1.6;
      color: var(--text-color);
      background-color: var(--bg-color);
    }

    main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    h1 {
      font-size: 1.875rem;
      font-weight: 700;
      color: var(--primary-dark);
      margin-bottom: 0.5rem;
    }

    h2 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--primary-dark);
      margin-bottom: 0.5rem;
    }

    .section {
      margin-bottom: 2rem;
    }

    .plot-container {
      border: 1px solid var(--border-color);
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    #scatter-plot {
      width: 100%;
      height: 500px;
      min-height: 500px;
    }

    .plot-note {
      text-align: right;
      font-size: 0.875rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
    }

    .overview {
      background-color: var(--card-bg);
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .overview .count {
      font-size: 0.875rem;
      color: var(--text-secondary);
      margin-bottom: 1rem;
    }

    .overview p {
      color: var(--text-color);
    }

    .clusters-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1rem;
    }

    .cluster-card {
      background-color: var(--card-bg);
      border-radius: 8px;
      padding: 1.25rem;
      border-left: 4px solid var(--primary);
      transition: box-shadow 0.2s;
    }

    .cluster-card:hover {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .cluster-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }

    .cluster-count {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .cluster-count svg {
      width: 1rem;
      height: 1rem;
    }

    .cluster-takeaway {
      font-size: 0.9375rem;
      color: var(--text-color);
    }

    @media (max-width: 768px) {
      main {
        padding: 1rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .clusters-grid {
        grid-template-columns: 1fr;
      }

      #scatter-plot {
        height: 400px;
      }
    }
  </style>
</head>
<body>
  <main>
    <section class="section">
      <div class="plot-container">
        <div id="scatter-plot"></div>
      </div>
      <p class="plot-note">※ 各点にカーソルを合わせると意見を確認できます</p>
    </section>

    <section class="section overview">
      <h1><%= @title %></h1>
      <p class="count"><%= result.comment_num %>件</p>
      <p><%= result.overview %></p>
    </section>

    <section class="section">
      <div class="clusters-grid">
        <%- level1_clusters.each do |cluster| -%>
        <div class="cluster-card" style="border-left-color: <%= cluster_color(cluster.id) %>;">
          <div class="cluster-header">
            <h2><%= cluster.label %></h2>
          </div>
          <p class="cluster-count">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 9a2 2 0 0 1-2 2H6l-4 4V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2z"></path>
              <path d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1"></path>
            </svg>
            <%= cluster.value %>件
          </p>
          <p class="cluster-takeaway"><%= cluster.takeaway %></p>
        </div>
        <%- end -%>
      </div>
    </section>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var plotEl = document.getElementById('scatter-plot');

      // Check if Plotly loaded
      if (typeof Plotly === 'undefined') {
        plotEl.innerHTML =
          '<div style="padding: 2rem; text-align: center; color: #718096;">' +
          '<p>グラフを表示できません。</p>' +
          '<p style="font-size: 0.875rem;">Plotly.jsの読み込みに失敗しました。<br>' +
          'ネットワーク接続を確認してください。</p>' +
          '</div>';
        return;
      }

      var points = <%= points_json %>;
      var clusterMeta = <%= cluster_meta_json %>;

      // Check if we have data
      if (!points || points.length === 0) {
        plotEl.innerHTML =
          '<div style="padding: 2rem; text-align: center; color: #718096;">' +
          '<p>表示するデータがありません。</p>' +
          '</div>';
        return;
      }

      var colors = ['#1f77b4', '#ff7f0e', '#2ca02c', '#d62728', '#9467bd',
                    '#8c564b', '#e377c2', '#7f7f7f', '#bcbd22', '#17becf'];

      function getColor(point) {
        var clusterId = point.cluster_id;
        if (!clusterId || clusterId.indexOf('_') === -1) return colors[0];
        var index = parseInt(clusterId.split('_')[1], 10);
        return colors[index % colors.length];
      }

      function buildAnnotations() {
        var clusterPoints = {};

        points.forEach(function(p) {
          var cid = p.cluster_id;
          if (!cid) return;
          if (!clusterPoints[cid]) clusterPoints[cid] = [];
          clusterPoints[cid].push(p);
        });

        var annotations = [];
        Object.keys(clusterPoints).forEach(function(cid) {
          var pts = clusterPoints[cid];
          var meta = clusterMeta[cid];
          if (!meta) return;

          var avgX = pts.reduce(function(s, p) { return s + p.x; }, 0) / pts.length;
          var avgY = pts.reduce(function(s, p) { return s + p.y; }, 0) / pts.length;

          annotations.push({
            x: avgX,
            y: avgY,
            text: meta.label.length > 16 ? meta.label.slice(0, 16) + '...' : meta.label,
            showarrow: false,
            font: { size: 11, color: '#ffffff' },
            bgcolor: meta.color,
            borderpad: 4,
            opacity: 0.9
          });
        });

        return annotations;
      }

      var trace = {
        x: points.map(function(d) { return d.x; }),
        y: points.map(function(d) { return d.y; }),
        mode: 'markers',
        type: 'scattergl',
        text: points.map(function(d) { return d.argument; }),
        customdata: points.map(function(d) { return d.arg_id; }),
        marker: {
          size: 8,
          opacity: 0.7,
          color: points.map(getColor)
        },
        hovertemplate: '%{text}<extra></extra>'
      };

      var layout = {
        showlegend: false,
        hovermode: 'closest',
        xaxis: {
          showgrid: false,
          zeroline: false,
          showticklabels: false
        },
        yaxis: {
          showgrid: false,
          zeroline: false,
          showticklabels: false
        },
        annotations: buildAnnotations(),
        margin: { l: 20, r: 20, t: 20, b: 20 }
      };

      var config = {
        responsive: false,
        displayModeBar: true,
        modeBarButtonsToRemove: ['select2d', 'lasso2d', 'resetScale2d', 'toImage'],
        displaylogo: false
      };

      try {
        Plotly.newPlot('scatter-plot', [trace], layout, config).then(function() {
          Plotly.Plots.resize('scatter-plot');
        });
      } catch (e) {
        console.error('Plotly error:', e);
        plotEl.innerHTML =
          '<div style="padding: 2rem; text-align: center; color: #718096;">' +
          '<p>グラフの描画中にエラーが発生しました。</p>' +
          '<p style="font-size: 0.875rem;">' + e.message + '</p>' +
          '</div>';
      }
    });
  </script>
</body>
</html>
